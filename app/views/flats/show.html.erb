<div class="title-reviews mx-5">
  <h1><%= @flat.title %></h1>
  <p><%= @flat.address %>, <%= @flat.city %></p>
  <div class="d-flex">
    <p>Number of reviews</p>
    <i class="fas fa-star"></i>
  </div>
</div>
<div class="info d-flex mx-5">
  <div><img src=<%= @flat.image_url %>></div>
  <div class="about-flat">
    <!-- <hr> -->
    <div class="d-flex align-items-center pt-3">
      <p><i class="fas fa-users"></i> <%= @flat.size %></p>
      <p><i class="fas fa-wifi"></i> Wi-Fi</p>
      <p><i class="fas fa-home"></i> Entire Apartment</p>
      <p><i class="fas fa-tv"></i> Tv</p>
      <p><i class="far fa-map"></i> City Center</p>
      <p><i class="fas fa-euro-sign"></i> <strong style="color: #FF5A5E;"><%= @flat.price.to_i %>/night</strong></p>
    </div>
    <hr>
      <h3>Entire Apartment - Host: <%= @flat.user.name %></h3>
      <p> <%= @flat.description %> </p>

  <div class="booking-container d-flex justify-content-center align-items-center">
    <%= render 'bookings/form', booking: @booking %>
  </div>

  </div>

</div>

<div class="reviews-container d-flex justify-content-center mt-4">

  <% if @reviews.empty? %>
    <p>Still no reviews</p>
  <% end %>

  <% @reviews.each do |review| %>
    <li class="list-group-item mx-3">
      <p><%= review.content %></p>
    </li>
  <% end %>

</div>
