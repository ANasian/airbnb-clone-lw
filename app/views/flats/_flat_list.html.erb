<a href="/flats/<%= flat.id %>" class="link-flat" target="_blank">
  <div class="card-flat mb-3">
    <!-- <img src="https://source.unsplash.com/featured/?apartment" alt="flat_photo"> -->
    <img src="<%= flat.image_url %>" alt="flat_photo">
    <div class="flat-info">
      <small><%= flat.city %></small>
      <p id="title"><%= flat.title.upcase %></p>
      <!-- <div class="hr"><hr></div> -->
      <div class="flat-size">
      <div class="image-avatar"><%= image_tag 'placeholder.png' %></div>
        <div class="d-flex">
          <p style="font-size: 15px;">· <%= flat.size %> Guests &nbsp;·&nbsp;</p>
          <p>  <i class="fas fa-wifi"></i> Wi-Fi &nbsp;·</p>
        </div>
        <div class="description"><p><%= flat.description %></p></div>
      </div>
      <div class="d-flex">
        <% sum = 0
           flat.reviews.each { |review| sum += review.rating }
           flat_average = (sum / flat.reviews.size).to_f unless flat.reviews.empty?
        %>
        (<%= flat_average ? flat_average : "0 reviews" %>)
        <span><i class="fas fa-star" style="color:#E31C5E;"></i></span>
      </div>
    </div>
    <div class="price d-flex">
      <i class="fas fa-euro-sign mx-2 mt-1"></i>
      <p><%= flat.price.to_i %></p>
      <small>/Night</small>
    </div>
  </div>
</a>