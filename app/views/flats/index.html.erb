<h1>Lists of Flats</h1>

<ul>
  <% @flats.each do |item| %>
    <li><%= link_to item.title, flat_path(item) %></li>
  <% end %>
</ul>

<div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">    
</div>
